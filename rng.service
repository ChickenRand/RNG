[Unit]
Description=Send random number generated by OneRNG through WebSockets

[Service]
ExecStartPre=/bin/bash -c "stty raw -echo -F /dev/ttyACM0;echo cmd0 >/dev/ttyACM0;echo cmdO >/dev/ttyACM0"
ExecStart=/usr/local/bin/rng
Restart=always
User=root
Group=root
Environment=PATH=/usr/bin:/usr/local/bin:/bin
Environment=NODE_ENV=production
Environment=CHICKENRAND_URL=www.chickenrand.org
Environment=CHICKENRAND_PORT=80
Environment=ONERNG_PATH=/dev/ttyACM0

[Install]
WantedBy=multi-user.target
